<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Register - NetStore</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #2193b0 0%, #6dd5ed 100%);
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0;
    }

    .container {
      background: rgba(255, 255, 255, 0.95);
      padding: 50px 40px;
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      text-align: center;
      width: 100%;
      max-width: 400px;
    }

    .logo {
      font-size: 50px;
      background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
      color: white;
      border-radius: 20px;
      width: 80px;
      height: 80px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 20px;
      box-shadow: 0 10px 25px rgba(109, 213, 237, 0.4);
    }

    h1 {
      color: #2d3748;
      font-size: 2em;
      margin-bottom: 10px;
    }

    p {
      color: #718096;
      margin-bottom: 30px;
    }

    input {
      width: 100%;
      padding: 14px;
      margin-bottom: 20px;
      border: 1px solid #ccc;
      border-radius: 10px;
      font-size: 1em;
    }

    button {
      background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
      color: white;
      border: none;
      border-radius: 12px;
      padding: 14px;
      width: 100%;
      font-size: 1.1em;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(109, 213, 237, 0.4);
    }

    button:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(109, 213, 237, 0.5);
    }

    .footer {
      margin-top: 20px;
      color: #718096;
      font-size: 0.9em;
    }

    .footer a {
      color: #2193b0;
      text-decoration: none;
      font-weight: 600;
    }

    .footer a:hover {
      text-decoration: underline;
    }

    /* --- Popup Modal --- */
    .popup {
      position: fixed;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(0, 0, 0, 0.4);
      display: none;
      align-items: center;
      justify-content: center;
    }

    .popup-content {
      background: white;
      padding: 25px 35px;
      border-radius: 12px;
      text-align: center;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
      animation: fadeIn 0.3s ease;
    }

    .popup-content h3 {
      color: #e63946;
      margin-bottom: 10px;
    }

    .popup-content button {
      margin-top: 10px;
      padding: 8px 16px;
      border: none;
      background: #2193b0;
      color: white;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 600;
    }

    @keyframes fadeIn {
      from { transform: scale(0.8); opacity: 0; }
      to { transform: scale(1); opacity: 1; }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="logo">üóÇÔ∏è</div>
    <h1>Sign Up</h1>
    <p>Create your NetStore account</p>

    <form id="registerForm">
      <input type="text" name="username" placeholder="Username" required />
      <input type="password" name="password" placeholder="Password" required />
      <button type="submit">Register</button>
    </form>

    <div class="footer">
      Already have an account? <a href="/login">Login</a>
    </div>
  </div>

  <!-- Popup -->
  <div class="popup" id="popup">
    <div class="popup-content">
      <h3 id="popupMessage"></h3>
      <button onclick="closePopup()">OK</button>
    </div>
  </div>

  <script>
    const popup = document.getElementById("popup");
    const popupMessage = document.getElementById("popupMessage");

    function showPopup(message) {
      popupMessage.textContent = message;
      popup.style.display = "flex";
    }

    function closePopup() {
      popup.style.display = "none";
    }

    document.getElementById("registerForm").addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());

      const res = await fetch("/register", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data),
      });

      const result = await res.json();

      if (result.success) {
        showPopup("‚úÖ Registration successful! Redirecting...");
        setTimeout(() => (window.location.href = "/login"), 1200);
      } else {
        showPopup(result.message);
      }
    });
  </script>
</body>
</html>
